{
  "name": "diff-run",
  "version": "1.1.1",
  "description": "run command after git merge",
  "keywords": [
    "diff-run",
    "diffrun",
    "git",
    "husky",
    "hook",
    "git-hook"
  ],
  "main": "lib/index.js",
  "bin": "./bin/diff-run.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "dev": "cross-env BABEL_ENV=development dumi dev",
    "lint": "eslint . --ext=.ts,.tsx",
    "lint:fix": "eslint . --ext=.ts,.tsx --fix",
    "test": "jest",
    "build": "cross-env BABEL_ENV=commonjs babel src -d lib --extensions .ts,.tsx --delete-dir-on-start",
    "postbuild": "npm run build:types",
    "build:types": "tsc --declarationDir lib",
    "build:docs": "dumi build",
    "preversion": "npm run build",
    "postversion": "npm publish",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postpublish": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kagawagao/diff-run.git"
  },
  "author": "kagawagao <kingsongao1221@gmail.com>",
  "license": "MIT",
  "prettier": "@opd/prettier-config-pangu",
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^19.0.3",
    "@opd/babel-preset-lib": "^1.13.6",
    "@opd/eslint-config-pangu": "^1.13.7",
    "@opd/jest-preset-pangu": "^1.13.8",
    "@opd/prettier-config-pangu": "^1.13.6",
    "@types/command-exists": "^1.2.0",
    "@types/debug": "^4.1.7",
    "@types/inquirer": "^9.0.0",
    "@types/micromatch": "^4.0.2",
    "@types/signale": "^1.4.2",
    "conventional-changelog-cli": "^4.0.0",
    "cross-env": "^7.0.3",
    "husky": "^9.0.7",
    "lint-staged": "^15.0.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "command-exists": "^1.2.9",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "debug": "^4.3.2",
    "git-repo-info": "^2.1.1",
    "inquirer": "9.2.11",
    "listr2": "^8.0.0",
    "micromatch": "^4.0.4",
    "please-upgrade-node": "^3.2.0",
    "signale": "^1.4.0"
  },
  "engines": {
    "node": ">= 14.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "diffrun": {
    "package-lock.json": "npm ci"
  }
}
